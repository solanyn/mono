---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import RatingDisplay from '../components/recipe/RatingDisplay.astro';
import { contentImage } from '../lib/images';

type Props = CollectionEntry<'recipes'>['data'] & { slug: string };

const { title, date, type, sourceUrl, sourceAuthor, sourcePlatform, rating, tags, image, processImage, slug } = Astro.props;
const heroUrl = image ? contentImage('recipes', slug, image) : undefined;
const processUrl = processImage ? contentImage('recipes', slug, processImage) : undefined;
---

<html lang="en">
	<head>
		<BaseHead title={`${title} — Andrew's Kitchen`} description={title} />
	</head>
	<body class="food">
		<Header section="food" />
		<main>
			<article class="prose">
				<div class="title">
					<h1>{title}</h1>
					<div class="meta">
						<FormattedDate date={date} />
						{type !== 'original' && sourceAuthor && (
							<span class="source">
								via {sourceUrl ? <a href={sourceUrl}>{sourceAuthor}</a> : sourceAuthor}
								{sourcePlatform && <span class="platform">({sourcePlatform})</span>}
							</span>
						)}
						{tags && tags.length > 0 && (
							<span class="tags">
								{tags.map((tag, i) => (
									<span>{i > 0 && ', '}{tag}</span>
								))}
							</span>
						)}
					</div>
				</div>
				<RatingDisplay {...rating} />
				{heroUrl && <img src={heroUrl} alt={title} class="hero" />}
				<div class="content">
					<slot />
				</div>
				{processUrl && <img src={processUrl} alt={`${title} — process`} class="process" />}
			</article>
		</main>
		<Footer section="food" />
	</body>
</html>
<style>
	.meta {
		color: var(--text-secondary);
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
		align-items: center;
	}
	.source {
		color: var(--text-secondary);
	}
	.platform {
		color: var(--text-tertiary);
		margin-left: 0.25em;
	}
	.tags {
		color: var(--text-tertiary);
	}
</style>
