---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { contentImage } from '../lib/images';

type Props = CollectionEntry<'gear'>['data'] & { slug: string };

const { title, date, type, tags, image, slug } = Astro.props;
const heroUrl = image ? contentImage('gear', slug, image) : undefined;
---

<html lang="en">
	<head>
		<BaseHead title={`${title} â€” Andrew's Kitchen`} description={title} />
	</head>
	<body class="food">
		<Header section="food" />
		<main>
			<article class="prose">
				<div class="title">
					<h1>{title}</h1>
					<div class="meta">
						<FormattedDate date={date} />
						<span class="type">{type}</span>
						{tags && tags.length > 0 && (
							<span class="tags">
								{tags.map((tag, i) => (
									<span>{i > 0 && ', '}{tag}</span>
								))}
							</span>
						)}
					</div>
				</div>
				{heroUrl && <img src={heroUrl} alt={title} class="hero" />}
				<div class="content">
					<slot />
				</div>
			</article>
		</main>
		<Footer section="food" />
	</body>
</html>
<style>
	.meta {
		color: var(--text-secondary);
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
		align-items: center;
	}
	.type {
		text-transform: capitalize;
		color: var(--text-tertiary);
	}
	.tags {
		color: var(--text-tertiary);
	}
</style>
