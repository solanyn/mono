<style>
	footer {
		font-size: var(--font-size-s);
		font-weight: var(--font-weight-light);
		line-height: 1.75;
		color: var(--text-secondary);
		opacity: 0.75;
		margin-top: 4rem;
	}
	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.links {
		display: flex;
		gap: 0.75rem;
	}
	footer a {
		color: var(--text-secondary);
		text-decoration: none;
		transition: color 0.2s ease-out;
	}
	footer a:hover {
		color: var(--text-primary);
	}
</style>
