const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="copyright">
			<span class="date">&copy; {today.getFullYear()}</span> Andrew
		</div>
		<div class="links">
			<a href="https://github.com/solanyn">GitHub</a>
			<a href="https://www.linkedin.com/in/solanyn">LinkedIn</a>
			<a href="mailto:andrew@goyangi.io">Email</a>
		</div>
	</div>
	<div style="position:absolute;width:1px;height:1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;" aria-hidden="true">
