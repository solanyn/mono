---
interface Props {
	section?: 'main' | 'food';
}

const { section = 'main' } = Astro.props;
const today = new Date();
const catSvg = section === 'food' ? '/cat-stretch.svg' : '/cat-sit.svg';
---

<footer>
	<div class="cat">
		<img src={catSvg} alt="" width="48" height="48" />
	</div>
	<div class="footer-content">
		<div class="copyright">
			<span class="date">&copy; {today.getFullYear()}</span> Andrew
		</div>
		<div class="links">
			<a href="https://github.com/solanyn">GitHub</a>
			<a href="https://www.linkedin.com/in/solanyn">LinkedIn</a>
			<a href="mailto:andrew@goyangi.io">Email</a>
		</div>
	</div>
</footer>
<style>
	footer {
		font-size: var(--font-size-s);
		font-weight: var(--font-weight-light);
		line-height: 1.75;
		color: var(--text-secondary);
		opacity: 0.75;
		margin-top: 4rem;
	}
	.cat {
		display: flex;
		justify-content: center;
		margin-bottom: 1rem;
		opacity: 0.3;
		transition: opacity 0.3s ease-out;
	}
	.cat:hover {
		opacity: 0.6;
	}
	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.links {
		display: flex;
		gap: 0.75rem;
	}
	footer a {
		color: var(--text-secondary);
		text-decoration: none;
		transition: color 0.2s ease-out;
	}
	footer a:hover {
		color: var(--text-primary);
	}
</style>
